<div class="container">
  <div class="col-md-6">
    <form  action="/expenses/edit/{{record._id}}?_method=PUT" method="POST" id="edit-form">
      <div>
        <h1><strong>可修改支出紀錄</strong></h1>
        <span><strong>*必填欄位</strong></span>
      </div>
      <div>
        <label for="name">名稱*:</label>
        <input type="text" name="name" id="name" value="{{record.name}}" placeholder="支出名稱" required>
      </div>
      <div>
        <label for="date">日期*:</label>
        <input type="text" name="date" id="date" value="{{record.date}}" placeholder="支出日期 e.g.格式: YYYY/MM/DD"
              pattern="\s*[0-9]{4}\/([1][0-2]|[0][1-9])\/([0][1-9]|[1-2][0-9]|[3][0-1])\s*" 
              title="請符合: YYYY/MM/DD" required>
      </div>
      <div>
        <label for="category">類別*:</label>
        <select name="category" id="category" required>
          {{#each categories}}  
              {{!-- if use handlebars-helpers: {{#is this.name ../record.category}} --}} 
            <option value="{{this.name}}" {{#if (lookup ../option [name])}}selected{{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div>
        <label for="amount">金額*:</label>
        <input type="number" name="amount" id="amount" value="{{record.amount}}" placeholder="支出金額" required>
      </div>
    </form>
    <div class="d-flex justify-content-center">
        <button class="btn fas fa-edit text-dark fa-2x" type="submit" form="edit-form">修改支出紀錄</button>
    </div>
  </div>
</div>